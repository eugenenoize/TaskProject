@model TaskLibrary.Habit

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CharacterId)
    @Html.HiddenFor(model => model.HabitId)
    @Html.HiddenFor(model => model.IsAccepted)
    @Html.HiddenFor(model => model.HabitStart)
    @Html.HiddenFor(model => model.DayCount)
    @Html.HiddenFor(model => model.WarningCount)
    @Html.HiddenFor(model => model.HabitEnd)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-1 col-md-3">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-3">
                @Html.LabelFor(model => model.ComplicationId, "Сложность", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                @Html.DropDownList("ComplicationId")
                @Html.ValidationMessageFor(model => model.ComplicationId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-3">
                @Html.LabelFor(model => model.AtributeId, "Характеристика", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                @Html.DropDownList("AtributeId")
                @Html.ValidationMessageFor(model => model.AtributeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-3">
                @Html.LabelFor(model => model.IsUseful, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                <label class="fancy-radio">
                    <label>
                        <input name="IsUseful" value="true" type="radio" checked=""><span><i></i>Да</span>
                    </label>
                </label>
                <label class="fancy-radio">
                    <label>
                        <input name="IsUseful" value="false" type="radio"><span><i></i>Нет</span>
                    </label>
                    @Html.ValidationMessageFor(model => model.IsUseful, "", new { @class = "text-danger" })
                </label>
                @Html.ValidationMessageFor(model => model.IsUseful, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Редактировать привычку" class="btn btn-default" />
            </div>
        </div>
    </div>
}
