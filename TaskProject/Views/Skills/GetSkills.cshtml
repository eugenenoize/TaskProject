@model IEnumerable<TaskProject.Models.Skill>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lvl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentExp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxExp)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Atribute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lvl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentExp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxExp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atribute.AtributeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating.RatingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SkillId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SkillId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SkillId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
