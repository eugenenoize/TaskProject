                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Сообщение</label>
                                <textarea class="form-control" id="body" name="Body" rows="5" placeholder="Сообщение" required="required" data-validation-required-message="Пожалуйста введите ваше сообщение."></textarea>
