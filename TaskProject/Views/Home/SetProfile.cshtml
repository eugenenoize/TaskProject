                    @using (Html.BeginForm("SetProfile", "Home", FormMethod.Post, new { @class = "form-horizontal form-profile", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Sex, new { @class = "col-sm-6 control-label" })
                    <div class="col-sm-6">
                        @Html.DropDownListFor(m => m.Sex, Model.SexSelect)
                        @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Age, new { @class = "col-sm-6 control-label" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Age)
                        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Growth, new { @class = "col-sm-6 control-label" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Growth)
                        @Html.ValidationMessageFor(m => m.Growth, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Weight, new { @class = "col-sm-6 control-label" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Weight)
                        @Html.ValidationMessageFor(m => m.Weight, "", new { @class = "text-danger" })
                    </div>
                </div>

                <h3>Оцените ваши навыки в различных областях</h3>

        foreach (UserAtribute atribute in Model.UserAtributes)
        {
            @Html.Hidden("atribute.AtributeId", atribute.AtributeId)
            @Html.Hidden("atribute.MaxValue", atribute.MaxValue)
    string rangevalue = "rangevalue" + (atribute.AtributeId).ToString();
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    @atribute.Atribute.Name
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    @atribute.Atribute.Description
                </div>
                <div class="col-sm-6">
                    <input type="range" name="@atribute.Atribute.Name" value="@atribute.Value" step="1" min="0" max="@atribute.MaxValue" list="rangeskill" onchange="document.getElementById('@rangevalue').innerHTML = this.value;" />
                    <datalist id="rangeskill">
                        <option value="0" label="0"></option>
                        <option value="1" label="1"></option>
                        <option value="2" label="2"></option>
                        <option value="3" label="3"></option>
                        <option value="4" label="4"></option>
                        <option value="5" label="5"></option>
                        <option value="6" label="6"></option>
                        <option value="7" label="7"></option>
                        <option value="8" label="8"></option>
                        <option value="9" label="9"></option>
                        <option value="10" label="10"></option>
                    </datalist>
                    <span id="@rangevalue">0</span>
                </div>
            </div>
        </div>
}

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-sm-offset-3 col-sm-6 text-center">
                <button type="submit" class="button special">Сохранить изменения</button>
            </div>
        </div>
