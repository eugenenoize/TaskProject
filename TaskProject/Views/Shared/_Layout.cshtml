    <script>
        $(document).ready(function () {
            var dead = $(".sw_dead").val();
            if (dead === "True") {
                $.ajax({
                    url: '@Url.Action("Dead","Home")',
                    success: function (data) {
                        $('.sw_modal_result').html(data);
                        document.getElementById('modal-header').style.display = "none";
                        $('.sw_modal_tasks').modal({
                            backdrop: 'static',
                            keyboard: false
                        });
                    }
                })
            }
            });

        function addhabit() {
            $.ajax({
                url: '@Url.Action("AddHabit", "Habits", new { area = "HabitsAndTasks" })',
                success: function (data) {
                    $('.sw_modal_result').html(data);
                    $(".sw_modal_tasks").modal('show');
                }
            })
        }

        function edithabit(habitid) {
            $.ajax({
                    url: '@Url.Action("EditHabit", "Habits", new { area = "HabitsAndTasks"})',
                    data: { id : habitid },
                    success: function (data) {
                        $('.sw_modal_result').html(data);
                        $('.sw_modal_tasks').modal('show');
                    }
                })
        }

        function deletehabit(habitid) {
            $.ajax({
                    url: '@Url.Action("DeleteHabit", "Habits", new { area = "HabitsAndTasks" })',
                    type: "POST",
                    data: { id: habitid },
                    success: function () {
                         location.reload();
                    }
            })
        }

        function addtask() {
            $.ajax({
                    url: '@Url.Action("AddGoal", "Goals", new { area = "HabitsAndTasks" })',
                    success: function (data) {
                        $('.sw_modal_result').html(data);
                        $(".sw_modal_tasks").modal('show');
                    }
                })
        }


    function post_addtask(model) {
            $.post({
                url: '@Url.Action("AddGoal","Goals",new { area = "HabitsAndTasks"})',
                data: model,
                datatype: "json",
                success: function (data) {
                    $('.sw_modal_result').html(data);
                    $('.sw_modal_tasks').modal('show');
                }
            })
        }

        function edittask(taskid) {
            $.ajax({
                url: '@Url.Action("EditGoal", "Goals", new { area = "HabitsAndTasks" })',
                data: { id : taskid },
                success: function (data) {
                    $('.sw_modal_result').html(data);
                    $('.sw_modal_tasks').modal('show');
                }
            })
        }

        function deletetask(taskid) {
            $.ajax({
                url: '@Url.Action("DeleteGoal", "Goals", new { area = "HabitsAndTasks" })',
                type: "POST",
                data: { id : taskid },
                success: function () {
                    location.reload();
                }
            })
        }
