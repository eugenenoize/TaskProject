<script>
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });

        $('.sw_datatable').DataTable({
            language: {
                processing: "Выполняется обработка...",
                search: "Поиск&nbsp;:",
                lengthMenu: "Показать _MENU_ записей",
                info: "Отображены с _START_ по _END_ из _TOTAL_ записей",
                infoEmpty: "Нет записей",
                infoFiltered: "(Поиск из _MAX_ записей)",
                infoPostFix: "",
                loadingRecords: "Идет загрузка...",
                zeroRecords: "Aucun &eacute;l&eacute;ment &agrave; afficher",
                emptyTable: "Aucune donnée disponible dans le tableau",
                paginate: {
                    first: "К первой",
                    previous: "Предыдущие",
                    next: "Следующие",
                    last: "К последней"
                },
                aria: {
                    sortAscending: ": Сортировка в порядке возрастания",
                    sortDescending: ": Сортировка в порядке убывания"
                }
            }
        });

     var link;

     $(".addgoal").on("click", function (e) {
            e.preventDefault();
            $(".sw_title").text($(this).attr("data_dialog_title"));
            $(".sw_modal_result").load(this.href);
            $(".sw_modal").modal("show", function () {
            });

            link = "/Goals/AddGoal";
     });

     $(".addskill").on("click", function (e) {
         e.preventDefault();
         $(".sw_title").text($(this).attr("data_dialog_title"));
         $(".sw_modal_result").load(this.href);
         $(".sw_modal").modal("show", function () {
         });

         link = "/Skills/AddSkill";
     });

     $(".editgoal").on("click", function (e) {

         e.preventDefault();
         $(".sw_title").text($(this).attr("data_dialog_title"));
         $(".sw_modal_result").load(this.href);
         $(".sw_modal").modal("show", function () {
         });

         link = "/Goals/EditGoal";
     });

     $(".editskill").on("click", function (e) {

         e.preventDefault();
         $(".sw_title").text($(this).attr("data_dialog_title"));
         $(".sw_modal_result").load(this.href);
         $(".sw_modal").modal("show", function () {
         });

         link = "/Skills/EditSkill";
        });

        $(".completegoal").on("click", function (e) {
            e.preventDefault();
            $(".sw_title").text($(this).attr("data_dialog_title"));
            $(".sw_modal_result").load(this.href);
            $(".sw_modal").modal("show", function () {
            });

            link = "/Goals/CompleteGoal";
        });

     $(".sw_modal_submit").on("click", function (e) {
         e.preventDefault();

         $.ajax({
            url: link,
            type: "POST",
            data: $('form').serialize(),
            datatype: "json",
            success: function (result) {
               $(".sw_modal_result").html(result);
               }
      });

     })
    });


     function deletegoal(goalid) {
         $.ajax({
             url: '@Url.Action("DeleteGoal", "Goals")',
             type: "POST",
             data: { id: goalid },
             success: function () {
                 $("#goal-" + goalid).remove();
             }
         });
    };

     function deleteskill(skillid) {
         $.ajax({
             url: '@Url.Action("DeleteSkill", "Skills")',
             type: "POST",
             data: { id: skillid },
             success: function () {
                 $("#skill-" + skillid).remove();
             }
         });
    };

