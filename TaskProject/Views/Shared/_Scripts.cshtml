<script>
        $(document).ready(function () {
            var dead = $(".sw_dead").val();
            if (dead === "True") {
                $.ajax({
                    url: '@Url.Action("Dead","Home")',
                    success: function (data) {
                        $('.sw_modal_result').html(data);
                        document.getElementById('modal-header').style.display = "none";
                        $('.sw_modal_tasks').modal({
                            backdrop: 'static',
                            keyboard: false
                        });
                    }
                })
            }
            });

        function addtask() {
            $.ajax({
                    url: '@Url.Action("AddGoal", "Goals")',
                    success: function (data) {
                        $('.sw_modal_result').html(data);
                        $(".sw_modal_tasks").modal('show');
                    }
                })
        }


    function post_addtask(model) {
            $.post({
                url: '@Url.Action("AddGoal","Goals")',
                data: model,
                datatype: "json",
                success: function (data) {
                    $('.sw_modal_result').html(data);
                    $('.sw_modal_tasks').modal('show');
                }
            })
        }

        function edittask(taskid) {
            $.ajax({
                url: '@Url.Action("EditGoal", "Goals")',
                data: { id : taskid },
                success: function (data) {
                    $('.sw_modal_result').html(data);
                    $('.sw_modal_tasks').modal('show');
                }
            })
        }

        function deletetask(taskid) {
            $.ajax({
                url: '@Url.Action("DeleteGoal", "Goals")',
                type: "POST",
                data: { id : taskid },
                success: function () {
                    location.reload();
                }
            })
        }
</script>

