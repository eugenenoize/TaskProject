@model TaskLibrary.Message
@{
    ViewBag.Title = "Вопросы и предлжения";
}

<h4 class="page-title">Вопросы и предлжения</h4>
<hr />

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="panel-content">
            @using (Html.BeginForm("QuestionAndSuggestion", "Info", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Body, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = "10", style = "resize:none;" })
                    @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
                </div>
                @Html.ValidationSummary()
                <br>
                <button type="submit" class="btn btn-primary">Отправить</button>
            }
        </div>
    </div>
</div>
