@model TaskProject.Models.NoteViewModel


@section Css{
    <link href="~/plugins/fullcalendar/fullcalendar.min.css" rel="stylesheet" />

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-body p-0">
                        <div id="calendar">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/plugins/fullcalendar/fullcalendar.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                header:
                    {
                        left: 'prev,next today',
                        center: 'title',
                        right: '' /*'month,agendaWeek,agendaDay'*/
                    },
                buttonText: {
                    today: 'Сегодня',
                    month: 'Месяц',
                    week: 'Неделя',
                    day: 'День'
                },
                firstDay: 1, //День, с которого начинается неделя (Monday=1)
                slotMinutes: 60,
                events: 'GetNotes/Notes/',
                eventClick: function (event) {
                    document.location.href = "ShowNote/"+ event.id;
                }

                /*editable: true,
                droppable: true, //Позволяет добавлять на календарь новые события дропом
                drop: function (date, allDay) {} */  //Вызывается при дропе события
            });
        });
    </script>
}
